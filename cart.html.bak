    <!-- Cart Content -->
    <div class="container my-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-container">
                    <h2 class="mb-4 d-flex align-items-center">
                        <i class="fas fa-snowflake me-2" style="color: #4cc9f0;"></i>
                        Your Shopping Cart
